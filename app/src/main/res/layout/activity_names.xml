<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Names">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/blackboard"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="318dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="Enter Players Name"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/player1EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="181dp"
            android:ems="10"
            android:hint="Player 1"
            android:inputType="textPersonName"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/player2EditText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/player1EditText"
            android:layout_marginBottom="196dp"
            android:ems="10"
            android:hint="Player 2"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/player1EditText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="X"
            android:textColor="@android:color/darker_gray"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/player2EditText2"
            android:layout_alignStart="@+id/textView2"
            android:text="O"
            android:textColor="@android:color/darker_gray"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="137dp"
            android:layout_height="63dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="67dp"
            android:onClick="playOnclick"
            android:text="Play"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>